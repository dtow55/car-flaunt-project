<!--PAGE HEADER-->
<h1><%= @car.year %> <%= @car.manufacturer %> <%= @car.model %></h1>

<!--OWNER-->
<h3>Owner: <%= @garage.user.username %> <br>

<!--GARAGE-->
Garage: <a href="/garages/<%= @garage.id %>"><%= @garage.name %></a></h3>
<br><br>

<!--EDIT CAR-->
<h3>Edit Car Information:</h3>
<% if @garage.user == current_user %>
    <form method="post" action="/cars/<%= @garage.id %>/edit">
        <input id="hidden" type="hidden" name="_method" value=patch>
        Model:<input type="text" name="model"><br>
        Manufacturer:<input type="text" name="manufacturer"><br>
        Year:<input type="text" name="year"><br><br>
        <input type="submit" value="Edit Car">
    </form>
<% end %>

<!--DELETE CAR-->
<% if @garage.user == current_user %>
    <form method="post" action="/cars/<%= @garage.id %>/delete">
        <input id="hidden" type="hidden" name="_method" value=delete>
        <input type="submit" value="Delete Car">
    </form>
<% end %>

